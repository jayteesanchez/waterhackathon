<body>
      <% include ../partials/nav %>

<div class="container">
  <h2>Register</h2>
  <div class="row">
    <div class="col s10">
      <form action="/users" method="post" accept-charset="utf-8">
        <input type="hidden">
        <label for="familyName">Family Name</label>
        <input type="text" name="familyName">
        <label for="address">Address</label>
        <input type="text" name="address">
        <label for="phoneNumber">Phone Number</label>
        <input type="text" name="phoneNumber">
        <label for="email">Email Address</label>
        <input type="text" name="email">
        <label for="numFamilyMembers">Number of Family Members</label>
        <input type="text" name="numFamilyMembers">
        <label for="monthlyGallons">Monthly Water Usage in Gallons</label>
        <input type="text" name="monthlyGallons">
        <label for="dailyGallons">Daily Water Usage in Gallons</label>
        <input type="text" name="dailyGallons">
        <button class="waves-effect waves-light btn" type="submit" value="Submit">Register</button>
      </form>
    </div>
  </div>
</div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.js"></script>
  <script type="text/javascript" src="javascripts/materialize.js"></script>

</body>
</html>
