<% include ../partials/head %>
<% include ../partials/nav %>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


<div class="row">
  <div class="col s6 offset-s5">
    <span>
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <i class="large material-icons">insert_chart</i>
      <h4>Days to Go!!</h4>
    </span>
  </div>
</div>

<div class="container">
  <div class="row table-row">
    <div class="col s12">
       <table class="striped">
        <thead>
          <tr>
            <th data-field="id"><h3 class="center">Family Name</h3></th>
            <th data-field="monthly-consumption"><h3 class="center">Gallons used Today</h3></th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(user, i) { %>
          <tr>
            <td><h5 class="center"><%= user.familyName %></h5></td>
            <td><h5 class="center"><%= user.monthlyGallons %></h5></td>
          </tr>
      <%}); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br><br>
<div class="row">
  <div class="col s12 center">
    <h4 class="center">Current Usage in Gallons per Day</h4>
    <canvas id="myChart" width="950px" height="500px"></canvas>
  </div>
</div>

  <script src="../../javascripts/api.js" type="text/javascript" charset="utf-8" async defer></script>
  <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js"></script>
  <% include ../partials/footer %>
